<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= Category.find(product.category_id).name %>
  </p>

  <p>
    <strong>Merchant:</strong>
    <%= Merchant.find(product.merchant_id).email %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= product.status %>
  </p>

</div>
