<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
/>

<div class="container">
  <%# <h3 class="h3">MERCHANT SYSTEM </h3> %>
  <div class="row float-left">
    <% pro.each do |pro| %>
      <div class="col-md-3 col-sm-6">
        <div class="product-grid">
          <div class="product-image">
            <a href="#">
              <img
                class="pic-1"
                src="<%=pro.productimages.first.image if pro.productimages.any?%>"
              >
              <%# <img class="pic-2" src="<%=Product.last.productimages.first.image %>"> %>
            </a>
            <ul class="social">
              <li><a href="" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
              <li><a href="/products/<%=pro.id%>/wishlist" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
              <li><a href="products/<%=pro.id%>/cart" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
            <span class="product-new-label">Sale</span>
            <span class="product-discount-label">20%</span>
          </div>
          <ul class="rating">
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star disable"></li>
          </ul>
          <div class="product-content">
            <h3 class="title"><a href="products/<%=pro.id%>"><%= pro.name %></a></h3>
            <div class="price">â‚¹<%= pro.price %>
              <p>Status:<%= pro.status %></p>
            </div>
            <a class="add-to-cart" href="products/<%=pro.id%>/cart">+ Add To Cart</a>
            <p><%#= link_to "Show this Product", product_path %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
