<!DOCTYPE html>
<html>
  <head>
    <title>Bussiness</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
    <% end%>
  
  <h1 align = "center"> MERCHANT SYSTEM </h1> 

  <% if merchant_signed_in? %>
  <%= link_to "Logout", destroy_merchant_session_path, method: :delete %>
  <% else %>
  <%= link_to "Login", new_merchant_session_path %>
  <% end %>
  
  <strong><%= link_to "HOME PAGE" , root_path %></strong>
    <%= yield %>
  </body>
</html>
